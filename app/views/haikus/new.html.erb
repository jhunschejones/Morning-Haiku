<div class="new-haiku">
  <div class="new-haiku-form">
    <%= form_with model: @haiku do |f| %>
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <%= f.text_field :title, class: "input", placeholder: "Pretentious title...", autocomplete: "off", autofocus: true %>
        </div>
      </div>

      <div class="field">
        <label class="label">Body</label>
        <div class="control">
          <%= f.text_area :body, class: "textarea", placeholder: "Feel inspired..." %>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <%= f.submit "Submit", class: "button is-link" %>
        </div>
        <div class="control">
          <%= link_to "Cancel", root_path, class: "button is-link is-light" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
